<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-3">
                <a href="@Url.Action("Index", "Home")">
                <img src="http://xaviadecor.com/Content/Images/Banners/XaviaLogo.jpg" class="img-responsive" />
                    </a>
            </div>
            <div class="col-xs-12 col-sm-9">
                <div>
                    <div class="row">
                        <div class="col-sm-offset-7" style="font-size:1.2em; color:#a13333">SDT: 0905 104 376  Dia Chi: 150 Phan Chau Trinh</div>
                        <hr />
                        <div class="col-sm-offset-4">
                            <label>Tim Kiem</label>
                            <input type="search" />
                            <button class="glyphicon glyphicon-search" style="display:inline-block"></button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
       <div class="container-fluid">
           <nav class="navbar navbar-inverse" data-spy="affix" data-offset-top="197" style="background-color:#f7f9fb;" id="Menu-Ngang">
               <ul class="nav navbar-nav">
                   <li>
                       <a href="#">Sản Phẩm </a>
                       @{Html.RenderAction("_HomeMenuCategoryPartial", "Home");}

                   </li>
                   <li><a href="#">Trang Chủ</a></li>
                   <li><a href="#">Giới Thiệu</a></li>
                   <li><a href="#">Tin Tức</a></li>
                   <li><a href="#">Block</a></li>
                   <li><a href="#">Liên Hệ</a></li>
               </ul>
           </nav>      
    </div>
        <div class="row">
            <div class="col-xs-12 col-sm-3">
                <h3>Danh Mục</h3>
                @{Html.RenderAction("_ProductCategoryPartial", "Product");}
                <div class="row">
                    @{Html.RenderAction("_LeftMenuNewProductPartial", "Home");}
                </div>
            </div>
            <div class="col-xs-12 col-sm-9">@RenderBody()</div>
        </div>

    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)

</html>
