@model List<Domain.Concrete.DanhMucTinTuc>

@{int total = 0;
}
<ul class="nav child_menu">

    @foreach (var cate in Model)
    {
        <li>
            <a href="@Url.Action("Index","ManageNew",new {newCategoryId=cate.NewCategoryID })">
                @cate.Ten
                <span class="badge">
                    @{int count = cate.TinTucs.Where(x => x.TrangThai == true).Count();
                        total += count;
                    }
                    @count
                </span>
            </a>
        </li>
    }
    <li>
        <a href="@Url.Action("Index","ManageNew",new {newCategoryId=0 })">
            Tất Cả <span class="badge">@total</span>
        </a>
    </li>   
</ul>


