@model Domain.Concrete.SanPham

@{
    /**/

    ViewBag.Title = "AddProduct";
    Layout = "~/Areas/Admin/Views/Shared/_NewLayout.cshtml";
}

<div class="page-header">
    <h3>Thêm Mới Sản Phẩm</h3>
</div>
@using (Html.BeginForm("AddProduct", "ManageProduct", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.MaSP, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.MaSP, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Ten, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Ten, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SoLuong, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SoLuong, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Gia, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Gia, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(x => x.GiaKhuyenMai, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.GiaKhuyenMai, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.HinhAnh, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            <input type="file"
                   name="file"
                   accept="image/*" />
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.CategoryProductID, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.DropDownListFor(x => x.CategoryProductID,
        new SelectList(ViewBag.DanhMuc, "CategoryProductID", "Ten"),
         new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SPHot, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            <input type="checkbox"
                   name="SPHot"
                   value="true" /> Sản Phẩm Hot
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Mota, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.Mota, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3">
            <button type="submit" class="btn btn-info">
                Thêm Mới
            </button>
        </div>
    </div>

}
