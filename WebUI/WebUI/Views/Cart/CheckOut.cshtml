@model Domain.Models.ShippingDetailsViewModel

@{
    /**/

    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared1/_Layout.cshtml";
}

<div class="page-header">
    <h2>Checkout</h2>
</div>
@using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
{

    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.Ten, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Ten, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DiaChi, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SDT, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SDT, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NoiDung, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.NoiDung, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-3">
            <button type="submit">
                Checkout
            </button>
        </div>
    </div>
}
@section scripts1{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

