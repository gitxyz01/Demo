
@model IEnumerable<Domain.Concrete.SanPham>
@{
    string Title = ViewData["Title"] != null ? (string)ViewData["Title"] : "";
}
<h4 class="title_block">
    <a title=@Title>@Title</a>
</h4>
<div class="block_content products-block" style="">
    <ul class="products">
        @foreach (var item in @Model)
        {
            <li class="clearfix">
                <a class="products-block-image" href="/Product/ProductDetails/@item.ProductID" title='@item.Ten'>
                    <img class="replace-2x img-responsive productimage-verticallistproduct" src='@item.HinhAnh' alt='@item.Ten' title="@item.Ten">
                </a>
                <div class="product-content">
                    <h5>
                        <a class="product-name" href="/Product/ProductDetails/@item.ProductID" title='@item.Ten'>@item.Ten</a>
                    </h5>
                    @*<p class="product-description">@item.ShortDescription</p>*@
                    <div class="price-box">
                        <span class="price">
                            @String.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:C0}", item.Gia)
                        </span>
                    </div>
                </div>
            </li>
        }
    </ul>
    <div>
        <a title="Xem tất cả" href="@Url.Action("Index","Product")" class="btn btn-default btn-sm icon-right">
            <span>
                Xem tất cả
            </span>
        </a>
    </div>
</div>
