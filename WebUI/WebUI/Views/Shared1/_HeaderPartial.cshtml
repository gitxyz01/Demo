@using Microsoft.AspNet.Identity

<div class="header-container">
    <header id="header">
        <div class="nav">
            <div class="container">
                <div class="row">
                    <div id="header_logo">
                        <a href="/" title="Xavia Decor">
                            <img class="logo img-responsive" src="~/Content/Images/Banners/XaviaLogo.jpg" title="Xavia Decor" alt="Xavia Decor" width="270" height="151">
                        </a>
                    </div>
                    <nav>
                        <ul id="header_links">                
                            <li id="header_link_home">
                                <a title="Địa chỉ"><span class="active glyphicon glyphicon-earphone" style="top:3px;margin-right:3px;" title="Điện thoại"></span><span style="font-size:18px;font-weight:600;font-family: initial;">0905 197 575</span></a>
                            </li>
                            <li id="header_link_contact">
                                <a title="Địa chỉ"><span class="glyphicon glyphicon-map-marker" style="top:3px;margin-right:2px;"></span><span style="font-size:18px;font-weight:600;font-family: initial;">144 Phan Châu Trinh, Đà Nẵng</span></a>
                            </li>
                        </ul>                                                                                                    
                        <div id="tmsearch" class="clearfix">
                            <div id="tmsearchbox">
                                <input class="tm_search_query font-size-child-menu form-control ac_input" type="text" id="tm_search_query" name="search_query" placeholder="Bạn cần tìm gì?" value="" autocomplete="off">
                                <button id="SearchProduct_Btn" name="tm_submit_search" class="btn btn-default button-search">
                                    <span>Search</span>
                                </button>
                            </div>
                        </div>
                    </nav>
                </div>
            </div>
        </div>
        <div>
            <div class="container">
                <div class="row">
                    <div class="top_menu top-level tmmegamenu_item">
                        <div class="stickUpTop isStuck" style="top: 0px; position: fixed;">
                            <div class="stickUpHolder container">
                                <div class="menu-title tmmegamenu_item">Menu</div>
                                <ul class="menu clearfix top-level-menu tmmegamenu_item sf-js-enabled sf-arrows">
                                    <li class="dropdown">
                                        <a class="dropbtn"><span class="glyphicon glyphicon-align-justify"></span>  Sản phẩm</a>
                                        <div class="dropdown-content">
                                            @foreach (var item in (IEnumerable<OnlineStore.Model.ViewModel.SummaryCategoryViewModel>)ViewBag.CategoryList)
                                            {
                                                <a class="product-category-item" href="/Product/GetProductByCategory/@item.Id">@item.Name</a>
                                            }
                                        </div>
                                    </li>                              
                                    <li class="top-level-menu-li tmmegamenu_item it_23637660">
                                        <a class="it_23637660 top-level-menu-li-a tmmegamenu_item" href="/" title="Trang chủ">Trang chủ</a>
                                    </li>
                                    <li class="top-level-menu-li tmmegamenu_item it_23637660">
                                        <a class="it_23637660 top-level-menu-li-a tmmegamenu_item" href="@Url.Action("About", "Home")" title="Giới thiệu">Giới thiệu</a>
                                    </li>
                                    <li class="top-level-menu-li tmmegamenu_item it_23637660">
                                        <a class="it_23637660 top-level-menu-li-a tmmegamenu_item" href="@Url.Action("Index", "News", new { id = 1 })" title="Tin tức">Tin tức</a>
                                    </li>
                                    <li class="top-level-menu-li tmmegamenu_item it_23637660">
                                        <a class="it_23637660 top-level-menu-li-a tmmegamenu_item" href="@Url.Action("Index", "News", new { id = 5 })" title="blog">Blog</a>
                                    </li>
                                    <li class="top-level-menu-li tmmegamenu_item it_23637660">
                                        <a class="it_23637660 top-level-menu-li-a tmmegamenu_item" href="@Url.Action("Contact", "Home")" title="Liên hệ">Liên hệ</a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <div class="pseudoStickyBlock" style="position: relative; display: block; height: 30px;"></div>
                    </div>
                </div>
            </div>
        </div>
    </header>
</div>
