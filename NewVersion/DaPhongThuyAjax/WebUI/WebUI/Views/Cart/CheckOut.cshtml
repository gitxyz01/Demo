@model Domain.Models.ShippingDetailsViewModel

@{
    /**/

    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared1/_Layout.cshtml";
}

<div class="page-header">
    <h2 style="text-align:center;">Đặt Hàng</h2>
</div>
<br />
@using (Html.BeginForm("Checkout", "Cart", FormMethod.Post, new { @class = "form-horizontal" }))
{

    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(x => x.Ten, new { @class = "control-label col-sm-2" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Ten, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Email, new { @class = "control-label col-sm-2" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DiaChi, new { @class = "control-label col-sm-2" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.DiaChi, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.SDT, new { @class = "control-label col-sm-2" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.SDT, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.NoiDung, new { @class = "control-label col-sm-2" })
        <div class="col-sm-9">
            @Html.TextAreaFor(x => x.NoiDung, new { @class = "form-control" })
        </div>
    </div>
    <br />
    <div class="form-group" style="position:relative; left:85px;">
        <div class="col-sm-offset-5">
            <button class="btn btn-success" type="submit">
                Đặt Hàng
            </button>
        </div>
    </div>
    <br />
    <hr />
}
@section scripts1{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

