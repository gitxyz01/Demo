@model WebUI.Areas.Admin.Models.AdminNewViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_NewLayout.cshtml";
}
<h1 style="text-align:center;">Danh Sách Tin Tức</h1>
<h3>
    <button class="btn btn-info glyphicon glyphicon-plus">
        @Html.ActionLink("Thêm Tin Tức", "Create", "ManageNew", "", null)
    </button>
</h3>

   <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
       <thead>
           <tr>
               <th>
                   Tên Tin Tức
               </th>
               <th>
                   Thứ Tự
               </th>
               <th>
                   Ngày Tạo
               </th>
               <th>
                   Hình Ảnh
               </th>
               <th>
                   Danh Mục Tin Tức
               </th>
               <th style="text-align:center;">Chỉnh Sửa</th>
               <th style="text-align:center;">Xóa</th>
           </tr>
       </thead>
       <tbody>
           @foreach (var item in Model.ListNew)
           {
           <tr>
               <td>@item.Ten</td>
               <td>@item.ThuTuHienThi</td>
               <td>
                   @item.NgayTao
               </td>
               <td>
                   <img src="@item.HinhAnh" style="width:70px;height:70px" />
               </td>
               <td>
                   @item.NewCategoryName
               </td>              
               <td style="text-align:center;">
                   <a href="@Url.Action("Edit", "ManageNew",new { id = item.NewID })">
                       <i class="glyphicon glyphicon-edit btn btn-success"> </i>
                   </a>
               </td>
               <td style="text-align:center;">
                   <a href="@Url.Action("ConfirmDelete", "ManageNew",new { id=item.NewID})">
                       <i class="glyphicon glyphicon-trash btn btn-danger"> </i>
                   </a>
               </td>

           </tr>
           }
       </tbody>
   </table>



