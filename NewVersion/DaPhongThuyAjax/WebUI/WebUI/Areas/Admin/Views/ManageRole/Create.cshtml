
@model Microsoft.AspNet.Identity.EntityFramework.IdentityRole

@{

    ViewBag.Title = "Thêm Quyền";

    Layout = "~/Areas/Admin/Views/Shared/_NewLayout.cshtml";

}

<div class="row">
    <div class="col-sm-6">
        <h2>@ViewBag.Title</h2>
        <hr />
        @using (Html.BeginForm("Create","ManageRole",FormMethod.Post,new { @class ="form-horizontal"}))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label for="Id">Mã Quyền</label>
                @Html.TextBoxFor(m => m.Id, new { id = "Id", @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <label for="Name">Tên Quyền</label>
                @Html.TextBoxFor(m => m.Name, new { id = "Name", @class = "form-control", required = "required" })
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Thêm Quyền</button>
            </div>
        }
    </div>
</div>
