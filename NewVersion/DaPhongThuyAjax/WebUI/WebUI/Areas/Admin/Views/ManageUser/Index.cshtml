@using WebUI.Models;

@model IEnumerable<ApplicationUser>

@{

    ViewBag.Title = "Quản lý thành viên";

    Layout = "~/Areas/Admin/Views/Shared/_NewLayout.cshtml";

}

<div class="row">
    <div class="col-sm-12">
        <h1 style="text-align:center;">@ViewBag.Title</h1>
        <a class="btn btn-info" href="@Url.Action("Register", "Account", new { area = "Admin" })">Thêm Thành Viên</a>
        <hr />
        <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
            <thead>
                <tr>
                    <th>Email</th>
                    <th>Quyền</th>
                    <th>Xóa Thành Viên</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)

                {

                <tr>
                    <td>@item.Email</td>
                    <td>
                        <a href="@Url.Action("EditRole", "ManageUser",new { Id = item.Id})">
                            <i class="glyphicon glyphicon-edit btn btn-success"> </i>
                        </a>
                    </td>
                    @if(item.Email != "Admin@gmail.com") { 
                    <td>
                        <a href="@Url.Action("Delete", "ManageUser",new { Id = item.Id })">
                            <i class="glyphicon glyphicon-trash btn btn-danger"> </i>
                        </a>
                    </td>
                    }
                    else
                    {
                        <td></td>
                    }
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

