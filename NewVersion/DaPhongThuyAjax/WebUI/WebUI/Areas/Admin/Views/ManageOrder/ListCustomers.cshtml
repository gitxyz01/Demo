@model IEnumerable<Domain.Models.CustomerViewModel>

@{
    ViewBag.Title = "ListCustomers";
    Layout = "~/Areas/Admin/Views/Shared/_NewLayout.cshtml";
}

<h1 style="text-align:center;">Danh Sách Khách Hàng</h1>


<table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
    <thead>
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DiaChi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SDT)
            </th>
            <th>Chi Tiết</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    <label>                       
                        <a href="@Url.Action("Index","ManageOrder",new {customerId = item.CustomerID })">Danh Sách Đơn Hàng
                        <i class="glyphicon glyphicon-list btn-success"></i>
                        </a>
                    </label></td>
            </tr>
        }
    </tbody>

    </table>
