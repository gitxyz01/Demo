@using Microsoft.AspNet.Identity

@model Domain.Concrete.DanhMucSanPham
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_NewLayout.cshtml";
}

<div class="page-header">
    <h1 style="text-align:center;">Thêm mới Danh Mục</h1>
</div>
@using (Html.BeginForm("AddCategory", "ManageCategory", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary()
    @Html.HiddenFor(x => x.NgayTao)
    @Html.HiddenFor(x => x.NguoiTao)

    <div class="form-group">
        @Html.LabelFor(x => x.Ten, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.Ten, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.ThuTuHienThi, new { @class = "control-label col-sm-3" })
        <div class="col-sm-9">
            @Html.TextBoxFor(x => x.ThuTuHienThi, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group" style="position:relative;left:280px;">
        <div class="col-sm-offset-s3">
            <button type="submit" class="btn btn-info">
                Thêm Danh Mục
            </button>
        </div>
    </div>
}


